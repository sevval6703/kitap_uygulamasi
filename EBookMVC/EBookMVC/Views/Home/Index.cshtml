@model EBookMVC.ViewModels.HomeViewModel

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4">@ViewBag.WelcomeMessage</h1>
                <p class="lead">Binlerce kitap arasından istediğinizi seçin ve okumaya başlayın!</p>
                <a href="@Url.Action("Index", "Books")" class="btn btn-light btn-lg">
                    <i class="bi bi-book"></i> Kitapları Keşfet
                </a>
            </div>
            <div class="col-md-6">
                <img src="/images/hero-books.jpg" alt="Kitaplar" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Öne Çıkan Kategoriler -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Popüler Kategoriler</h2>
        <div class="row">
            @foreach (var category in Model.FeaturedCategories)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 category-card">
                        <img src="@(category.ImageUrl ?? "/images/category-default.jpg")"
                             class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text">@category.Description</p>
                            <a href="@Url.Action("Details", "Categories", new { id = category.Id })"
                               class="btn btn-outline-primary">
                                <i class="bi bi-arrow-right"></i> Kitapları Gör
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Öne Çıkan Kitaplar -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Öne Çıkan Kitaplar</h2>
        <div class="row">
            @foreach (var book in Model.FeaturedBooks)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 book-card">
                        <img src="@(book.ImageUrl ?? "/images/book-default.jpg")"
                             class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">@book.Title</h6>
                            <p class="text-muted small">@book.Author</p>
                            <p class="text-muted small">@book.Category?.Name</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong class="text-primary">@book.Price.ToString("C2")</strong>
                                </div>
                                <div class="btn-group w-100">
                                    <a href="@Url.Action("Details", "Books", new { id = book.Id })"
                                       class="btn btn-sm btn-outline-primary">Detay</a>
                                    <button onclick="addToCart(@book.Id)" class="btn btn-sm btn-primary">
                                        <i class="bi bi-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Yeni Eklenenler -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Yeni Eklenen Kitaplar</h2>
        <div class="row">
            @foreach (var book in Model.NewBooks)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <img src="@(book.ImageUrl ?? "/images/book-default.jpg")"
                             class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-title">@book.Title</h6>
                            <p class="text-muted small">@book.Author</p>
                            <p class="text-primary"><strong>@book.Price.ToString("C2")</strong></p>
                            <a href="@Url.Action("Details", "Books", new { id = book.Id })"
                               class="btn btn-sm btn-outline-primary">İncele</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@section Scripts {
    <script>
        function addToCart(bookId) {
            $.post('@Url.Action("AddToCart", "Books")', {
                bookId: bookId,
                quantity: 1
            }, function(response) {
                if (response.success) {
                    updateCartCount();
                    // Toast bildirim göster
                    showToast('success', response.message);
                } else {
                    showToast('error', response.message);
                }
            });
        }

        function showToast(type, message) {
            // Basit toast bildirim
            var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            var toast = `<div class="alert ${alertClass} alert-dismissible fade show position-fixed"
                              style="top: 20px; right: 20px; z-index: 1050;" role="alert">
                            ${message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                         </div>`;
            $('body').append(toast);

            // 3 saniye sonra otomatik kapat
            setTimeout(function() {
                $('.alert').alert('close');
            }, 3000);
        }
    </script>
}